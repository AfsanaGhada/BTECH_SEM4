<main id="main" class="main">

    <div class="pagetitle">
        <h1>StateForm Layouts</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Users</a></li>
                <li class="breadcrumb-item">Forms</li>
                <li class="breadcrumb-item active">Layouts</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <section class="section">
        <div class="row">
            <div class="col-lg-100">

                <div class="card">
                    <div class="card-body">

                        <!-- Horizontal Form -->
                        <div class="container mt-5">
                            <h2 class="mb-4">User Information Form</h2>
                            <form action="#" method="POST">
                                <!-- UserName -->
                                <div class="mb-3">
                                    <label for="username" class="form-label">User Name</label>
                                    <input type="text" class="form-control" id="username" name="username" required>
                                    <small class="form-text text-muted">Enter the full name of the user.</small>
                                </div>

                                <!-- MobileNo -->
                                <div class="mb-3">
                                    <label for="mobileno" class="form-label">Mobile No</label>
                                    <input type="text" class="form-control" id="mobileno" name="mobileno" required>
                                    <small class="form-text text-muted">Enter the mobile number of the user.</small>
                                </div>

                                <!-- EmailID -->
                                <div class="mb-3">
                                    <label for="emailid" class="form-label">Email ID</label>
                                    <input type="email" class="form-control" id="emailid" name="emailid" required>
                                    <small class="form-text text-muted">Enter the email address of the user.</small>
                                </div>

                                <!-- CreationDate (Auto-generated by the backend, not editable) -->
                                <div class="mb-3">
                                    <label for="creationdate" class="form-label">Creation Date</label>
                                    <input type="datetime-local" class="form-control" id="creationdate" name="creationdate" disabled>
                                    <small class="form-text text-muted">Creation date is auto-generated and cannot be changed.</small>
                                </div>

                                <!-- Submit Button -->
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </form>
                        </div>
                        </div>
                    </div>
