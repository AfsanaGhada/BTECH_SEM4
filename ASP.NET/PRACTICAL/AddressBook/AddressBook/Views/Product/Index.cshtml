@model AddressBook.Models.ProductModel

@{
    ViewData["Title"] = "Create Product";
    Layout = "~/Views/Shared/_ProductLayout.cshtml"; // Ensure the layout exists
}

<h2 class="text-center">Create Product</h2>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg p-4">
                @using (Html.BeginForm("Submit", "Product", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
                {
                    <div class="mb-3">
                        @Html.LabelFor(m => m.Name, new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter product name", required = "required" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Price, new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(m => m.Price, new { @class = "form-control", placeholder = "Enter price", type = "number", step = "0.01", required = "required" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Category, new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(m => m.Category, new { @class = "form-control", placeholder = "Enter category" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Rating, new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(m => m.Rating, new { @class = "form-control", placeholder = "1 to 5", type = "number", min = "1", max = "5" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.ProductDescription, new { @class = "form-label fw-bold" })
                        @Html.TextAreaFor(m => m.ProductDescription, new { @class = "form-control", placeholder = "Enter product description", rows = "3" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.ProductCompony, new { @class = "form-label fw-bold" })
                        @Html.TextBoxFor(m => m.ProductCompony, new { @class = "form-control", placeholder = "Enter company name" })
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Submit</button>
                }
            </div>
        </div>
    </div>
</div>
